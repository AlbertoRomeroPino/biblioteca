<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.chatta.controllers_and_view.modify.ModifyLibro"
          xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" alignment="CENTER">

      <!-- Selección de Autor -->
      <Label text="Seleccionar Autor:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <ComboBox fx:id="comboBoxAutores" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Selección de Publicación -->
      <Label text="Seleccionar Publicación:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <ComboBox fx:id="comboboxPublicacion" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Campo para ISBN -->
      <Label text="ISBN:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <TextField fx:id="ISBN" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Botón para cerrar/modificar -->
      <Button fx:id="closeButton" text="Guardar Cambios" onAction="#Close" GridPane.rowIndex="3" GridPane.columnIndex="1" />
</GridPane>
