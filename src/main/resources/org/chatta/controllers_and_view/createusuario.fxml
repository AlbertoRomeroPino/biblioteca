<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.chatta.controllers_and_view.create.CreateUsuario"
          xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" alignment="CENTER" prefHeight="350.0" prefWidth="300.0">

    <!-- Campo Nombre -->
    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="nombre" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Campo Clave -->
    <Label text="Clave:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="clave" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Campo Email -->
    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="email" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Botón para añadir usuario -->
    <Button fx:id="closeButton" text="Añadir Usuario" onAction="#Close" GridPane.rowIndex="3" GridPane.columnIndex="1" />
</GridPane>
