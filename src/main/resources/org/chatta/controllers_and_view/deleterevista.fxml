<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.chatta.controllers_and_view.delete.DeleteRevista"
          xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" alignment="CENTER" prefHeight="350.0" prefWidth="300.0">

      <!-- ComboBox para seleccionar la revista -->
      <ComboBox fx:id="ComboBoxRevista" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="200" />

      <!-- Botón para eliminar el préstamo -->
      <Button fx:id="closeButton" text="Eliminar Revista" onAction="#Close" GridPane.rowIndex="1" GridPane.columnIndex="0" />

</GridPane>
