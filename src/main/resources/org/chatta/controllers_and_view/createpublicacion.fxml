<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.chatta.controllers_and_view.create.CreatePublicacion"
          xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" alignment="CENTER">

    <!-- Nombre -->
    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="nombre" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Fecha de Publicación -->
    <Label text="Fecha de Publicación:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <DatePicker fx:id="fecha_publicacion" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Tipo -->
    <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <ComboBox fx:id="ComboBoxtipoEnum" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Categoría -->
    <Label text="Categoría:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <ComboBox fx:id="comboBoxCategoria" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Editorial -->
    <Label text="Editorial:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <ComboBox fx:id="comboBoxEditorial" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="200.0" />

    <!-- Botón para añadir publicación -->
    <Button fx:id="closeButton" text="Añadir Publicación" onAction="#Close" GridPane.rowIndex="5" GridPane.columnIndex="1" />
</GridPane>
