<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.chatta.controllers_and_view.modify.ModifyPrestamo">

      <!-- Selección de Usuario -->
      <Label text="Seleccionar Prestamo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <ComboBox fx:id="comboBoxPrestamo" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

      <!-- Selección de Estado -->
      <Label text="Seleccionar Estado:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <ComboBox fx:id="ComboBoxestadoEnum" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

      <!-- Fecha de Préstamo -->
      <Label text="Fecha de Devolucion:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
      <DatePicker fx:id="fechaDevolucion" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

      <!-- Botón para cerrar/modificar -->
      <Button fx:id="closeButton" onAction="#Close" text="Guardar Cambios" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
