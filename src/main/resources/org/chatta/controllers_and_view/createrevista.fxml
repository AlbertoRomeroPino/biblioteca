<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.chatta.controllers_and_view.create.CreateRevista"
          xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" alignment="CENTER">

      <!-- ISSN -->
      <Label text="ISSN:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="ISSN" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Periodicidad -->
      <Label text="Periodicidad:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <ComboBox fx:id="comboboxperiodicidadenum" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Publicación -->
      <Label text="Publicación:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <ComboBox fx:id="comboboxPublicacion" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Botón para añadir revista -->
      <Button fx:id="closeButton" text="Añadir Revista" onAction="#Close" GridPane.rowIndex="3" GridPane.columnIndex="1" />
</GridPane>
