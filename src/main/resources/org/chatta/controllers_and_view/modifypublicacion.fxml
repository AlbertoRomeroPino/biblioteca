<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.chatta.controllers_and_view.modify.ModifyPublicacion"
          xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" alignment="CENTER">

      <!-- Campo de Nombre -->
      <Label text="Título de Publicación:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
      <TextField fx:id="nombre" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Fecha de Publicación -->
      <Label text="Fecha de Publicación:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
      <DatePicker fx:id="fecha_publicacion" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Selección de Tipo -->
      <Label text="Seleccionar Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
      <ComboBox fx:id="ComboBoxtipoEnum" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Selección de Categoría -->
      <Label text="Seleccionar Categoría:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
      <ComboBox fx:id="comboBoxCategoria" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Selección de Editorial -->
      <Label text="Seleccionar Editorial:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
      <ComboBox fx:id="comboBoxEditorial" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Selección de Publicación -->
      <Label text="Seleccionar Publicación Existente:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
      <ComboBox fx:id="comboboxPublicacion" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="200.0" />

      <!-- Botón para cerrar/modificar -->
      <Button fx:id="closeButton" text="Guardar Cambios" onAction="#Close" GridPane.rowIndex="6" GridPane.columnIndex="1" />
</GridPane>
